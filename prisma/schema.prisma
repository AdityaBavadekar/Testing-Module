datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String
  middleName   String?
  slug         String   @unique
  surname      String
  email        String?  @unique
  username     String   @unique
  password     String
  dateOfBirth  DateTime
  name         String?
  image        String?
  invitationId String? 
  schoolId     String?
  role         Roles
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isActive     Boolean  @default(false)
}

enum Roles {
  teacher
  student
}
